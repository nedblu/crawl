// Variables
bg = rgb(248, 245, 241)
emerald = rgb(0, 184, 144)
sea = #16a085
nav_bg = rgb(57, 56, 54)
clouds = #ecf0f1
crawl = rgb(255,112,127)

@import 'prefix.styl'

*
	box-sizing(border-box)
	default_values()
html, body
	// background-color #bdc3c7
	// background-color #777
	height 100%

// HEADER SECTION...

header
	background-color darken(emerald, -5)
	// background-color #5EC792
	color darken(sea, 5)
	border-bottom 2px solid #777
	#logo
		display inline-block
		vertical-align middle
		// background-color #ecf0f1
		background-color clouds
		figure
			img
				width 160px
				height auto
				display block
				padding 4px
	#action
		// border 1px solid blue
		float right
		display inline-block
		vertical-align middle
		#account
			float left
			ul
				list-style none
				line-height 40px
				li
					float left
					// border 1px solid green
					padding 4px 10px
					// border-right 2px solid darken(emerald, -10)
					a
						text-decoration none
						color darken(sea, 5)
						transition(all 0.25s ease)
						&:hover
							color darken(sea, 15)
		#user
			float left
			figure
				margin-left 10px
				// padding 0 6px
				// background-color darken(emerald, -20)
				img
					// border-radius(20%)
					width 48px
					height auto
					display block
#main
	width 100%
	height 100%
	// background-color grey
	display inline-block
	// margin-top 2px
	#menu
		float left
		width 160px
		height 100%
		background-color nav_bg
		nav
			ul
				list-style none
				li
					border-bottom 1px solid darken(nav_bg, -10)
					a
						// border 1px solid red
						display block
						text-align left
						text-decoration none
						color darken(sea, 5)
						// color #5EC792
						padding 0.5em 0 0.5em 0.5em
						font-size 1.1em
						transition(all 0.25s ease)
						&:hover
							border-left 8px solid #5EC792 
					.active
						// border-left 8px solid #5EC792
						border-left 8px solid emerald
	#content
		height 100%
		margin 0 auto
		background-color clouds